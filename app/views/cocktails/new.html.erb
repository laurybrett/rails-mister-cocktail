 <div class="banner background_show">
    <div class="add-banner">
        <h1>Add a Cocktail</h1>
    </div>
</div>

<%= simple_form_for [@cocktail] do |f| %>
  <%= f.input :name %>
  <%= f.submit "Create a Cocktail", class: "btn btn-primary" %>
<% end %>

<div class="btn">
    <div class="btn-add">
      <%= link_to cocktails_path do %>
        <i class="fas fa-undo"></i> Back to Cocktails
      <% end %>
    </div>
</div>
