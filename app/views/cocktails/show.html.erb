 <div class="banner background_show">
    <div class="center">
        <%= @cocktail.name.capitalize %>
    </div>
</div>

<div class="ingredients">
  <div class="ingredient-card">
    <h3>Ingredients</h3>
    <% @cocktail.doses.each do |dose| %>
      <li> <%= dose.description %> : <%= dose.ingredient.name %>
       <%= link_to dose_path(dose), method: :delete, data: {confirm: "Sure?"} do %><i class="fas fa-trash-alt"></i><% end %>
        </li>
    <% end %>
  </div>
</div>

<div class="butn">
    <div class="btn-add">
      <%= link_to new_cocktail_dose_path(@cocktail) do %>
        <i class="fas fa-plus"></i> Add a dose
      <% end %>
    </div>
    <div class="btn-add">
      <%= link_to cocktails_path do %>
        <i class="fas fa-undo"></i> Back to Cocktails
      <% end %>
    </div>
</div>
