 <div class="banner background_show">
    <div class="add-banner">
        <h1>Add a Cocktail</h1>
    </div>
</div>

  <div class="container text-center">
    <div class="row">
        <div class="col-xs-offset-3 col-xs-6">
        <%= simple_form_for [@cocktail] do |f| %>
          <%= f.input :name %>
          <%= f.input :image %>
          <%= f.input :image_cache, as: :hidden %>
          <%= f.submit "Create a Cocktail", class: "btn-add" %>
        <% end %>
      </div>
    </div>
  </div>

<div class="butn">
    <div class="btn-add">
      <%= link_to cocktails_path do %>
        <i class="fas fa-undo"></i> Back to Cocktails
      <% end %>
    </div>
</div>
