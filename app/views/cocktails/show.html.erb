<h1> <%= @cocktail.name %> details </h1>

<% @cocktail.doses.each do |dose| %>
  <li> <%= dose.description %> : <%= dose.ingredient.name %>
   <%= link_to dose_path(dose), method: :delete, data: {confirm: "Sure?"} do %><i class="fas fa-trash-alt"></i><% end %>
    </li>
<% end %>

<%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %>
<%= link_to 'Back to cocktails', cocktails_path %>
